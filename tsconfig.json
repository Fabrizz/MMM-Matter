{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "es6",
    "lib": ["DOM", "ESNext"],
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["src/backend/*"],
      "@frontend/*": ["src/frontend/*"],
      "@typesd/*": ["src/types/*"]
    }
  },
  "exclude": ["node_modules", "client"],
}
